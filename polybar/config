[colors]
green=#20C20E

[config]
include-file=$HOME/.config/polybar/config.ini

[bar/rpi400]
modules-right=date
modules-left=cpu memory filesystem wired-network wireless-network
modules-center=windows
include-file=$HOME/.config/polybar/base_bar.ini

[bar/g57]
modules-right=battery date
modules-left=cpu memory filesystem wired-network wireless-network
modules-center=windows
include-file=$HOME/.config/polybar/base_bar.ini

[bar/pbpro]
modules-right=pbbattery date
modules-left=cpu memory filesystem wired-network wireless-network
modules-center=windows
include-file=$HOME/.config/polybar/base_bar.ini


[module/date]
type=internal/date
date = %d/%m/%Y
time = %H:%M:%S
label = %time% %date%


[module/pbbattery]
type = custom/script
exec = pinebook_battery.py
interval = 5


[module/battery]
type = internal/battery
time-format = %H:%M
format-charging = BAT <ramp-capacity> <label-charging>
format-discharging = BAT <ramp-capacity> <label-discharging>
format-full = BAT <ramp-capacity> <label-full>
label-charging = ^ %percentage%%
label-discharging = %{F#DDCF00}v %percentage%%%{F-}

ramp-capacity-font = 2
ramp-capacity-0 = ▁
ramp-capacity-1 = ▂
ramp-capacity-2 = ▃
ramp-capacity-3 = ▄
ramp-capacity-4 = ▅
ramp-capacity-5 = ▆
ramp-capacity-6 = ▇
ramp-capacity-7 = █

; Only applies if <bar-capacity> is used
bar-capacity-width = 10


[module/cpu]
width=25%
type=internal/cpu
format = <label> <ramp-load>
ramp-load-font=2
label = CPU %percentage:3%%
ramp-load-0 = ▁
ramp-load-1 = ▂
ramp-load-2 = ▃
ramp-load-3 = ▄
ramp-load-4 = ▅
ramp-load-5 = ▆
ramp-load-6 = ▇
ramp-load-7 = █



[module/memory]
type=internal/memory
format = <label> <ramp-used>
label = RAM %percentage_used:3%%
ramp-used-font = 2
ramp-used-0 = ▁
ramp-used-1 = ▂
ramp-used-2 = ▃
ramp-used-3 = ▄
ramp-used-4 = ▅
ramp-used-5 = ▆
ramp-used-6 = ▇
ramp-used-7 = █


[module/filesystem]
type=internal/fs
mount-0=/
format-mounted = <label-mounted> <ramp-capacity>
label-mounted = %mountpoint% %percentage_used%%
ramp-capacity-font = 2
ramp-capacity-7 = ▁
ramp-capacity-6 = ▂
ramp-capacity-5 = ▃
ramp-capacity-4 = ▄
ramp-capacity-3 = ▅
ramp-capacity-2 = ▆
ramp-capacity-1 = ▇
ramp-capacity-0 = █


[module/wired-network]
type = internal/network
interface = ${config.eth}
label-connected = %ifname% %downspeed:9%

[module/wireless-network]
type = internal/network
interface = ${config.wlan}
label-connected = %essid% %downspeed:9%

[module/windows]
type = custom/script
tail = true
exec = python -u $HOME/Local/bin/ratpoison_windows_list.py
format = <label>
label = %output%
format-underline = ${colors.green}
